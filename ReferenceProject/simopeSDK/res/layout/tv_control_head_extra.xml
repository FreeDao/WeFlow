<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_color"
    android:layout_marginTop="30dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/tv_control_head_extral_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_control_head_extral_tvshow"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:textSize="20dp"
           	android:textStyle="bold"
            android:gravity="left"
            android:singleLine="true"
            android:textColor="@color/_white_charactor_color" />
       
        <TextView
            android:id="@+id/tv_control_head_extral_play_live"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/tv_control_head_extral_time"
            android:text="直播"
            android:textColor="@color/red_charactor_show"
            android:textSize="22dp"
            android:visibility="invisible"
          />

              
		<TextView
               android:id="@+id/tv_control_head_extral_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:text="00:00"
               android:layout_centerVertical="true"
               android:textColor="@color/_white_charactor_color"
               android:textSize="25dp" />

    </RelativeLayout>

</LinearLayout>