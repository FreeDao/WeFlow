<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no_color"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:background="@drawable/tosat_bg" >
        
         <TextView
            android:id="@+id/playview_dilg_tvshow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="播放完毕!"
            android:textColor="@color/_white_charactor_color" />

         <TextView
            android:id="@+id/playview_dilg_tvshow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/playview_dilg_tvshow1"
            android:layout_marginTop="20dp"
            android:text="点击播放按钮,"
            android:textColor="@color/_white_charactor_color" />

        <TextView
            android:id="@+id/playview_dilg_tvshow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
              android:layout_below="@+id/playview_dilg_tvshow2"
            android:text="从头开始播放!"
            android:textColor="@color/_white_charactor_color" />

    </RelativeLayout>

</RelativeLayout>