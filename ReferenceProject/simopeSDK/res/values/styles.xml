<resources>

 
    
    
        <style name="AnimBottom" parent="@android:style/Animation.Activity">
            
       <item name="@android:activityOpenEnterAnimation">@anim/push_bottom_in</item>

  	   <item name="@android:activityOpenExitAnimation">@anim/push_bottom_in</item>

  	   <item name="@android:activityCloseEnterAnimation">@anim/push_bottom_out</item>

  	   <item name="@android:activityCloseExitAnimation">@anim/push_bottom_out</item>
  	   

    </style>
    
        <style name="LargePopupAnimation_From_bottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/large_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/large_push_bottom_out</item>
    </style>

    <style name="LargePopupAnimation_From_top" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/large_push_top_in</item>
        <item name="android:windowExitAnimation">@anim/large_push_top_out</item>
    </style>
    
    <style name="LargePopupAnimation_From_left" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/large_push_left_in</item>
        <item name="android:windowExitAnimation">@anim/large_push_left_out</item>
    </style>
    
      <style name="LargePopupAnimation_From_right" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/large_push_right_in</item>
        <item name="android:windowExitAnimation">@anim/large_push_right_out</item>
    </style>
    
 	<style name="PopupAnimation_From_bottom" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="PopupAnimation_From_top" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
    
      <style name="yzvideo_comm_return">
        <item name="android:textSize">@dimen/comm_btn_return_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/dlna_selector_btn_return</item>
        <item name="android:paddingLeft">@dimen/comm_btn_return_padding_left</item>
        <item name="android:paddingTop">@dimen/comm_btn_return_padding_top</item>
        <item name="android:paddingRight">@dimen/comm_btn_return_padding_right</item>
        <item name="android:paddingBottom">@dimen/comm_btn_return_padding_bottom</item>
        <item name="android:layout_marginLeft">@dimen/comm_btn_return_magin_left</item>
    </style>
    
        <style name="yzvideo_titlebar_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
    </style>
    
        
       <style name="yzvideo_dlna_definition">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/dlna_selector_player_btn_comm</item>
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">5.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    
       
       <style name="dlna_player_seekbar">
        <item name="android:maxHeight">2.0dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/dlna_seekbar_style_drawable</item>
        <item name="android:progressDrawable">@drawable/dlna_seekbar_style_drawable</item>
        <item name="android:minHeight">2.0dip</item>
        <item name="android:thumb">@drawable/dlna_controller_thumb</item>
        <item name="android:thumbOffset">8.0px</item>        
   	 </style>
   	 
       
       <style name="DlgAnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dlg_popwd_top_in</item>
        <item name="android:windowExitAnimation">@anim/dlg_popwd_dow_out</item>
    </style>
    
       
          <style name="DlgAnimSlide" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/dlg_wd_ringht_in</item>
        <item name="android:windowExitAnimation">@anim/dlg_wd_left_out</item>
    </style>
    
       <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
	    <item name="android:windowAnimationStyle">@style/AnimBottom</item>
	   
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
         <item name="android:windowFullscreen">true</item> 
      
    </style>
</resources>
