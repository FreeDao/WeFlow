<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/rly_dialog_container"
    >

    <RelativeLayout
        android:id="@+id/rly_dialog_lp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/white_corners_bg"
        android:orientation="vertical"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/tv_login_looklook_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dip"
            android:text="找回密码"
            android:textColor="@color/black"
            android:textSize="@dimen/size_20sp" />

        <FrameLayout
            android:id="@+id/ll_login_looklook_password_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_login_looklook_password_title"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="14dp"
            android:background="@drawable/grey_corners_bg"
            android:gravity="center_vertical"
            android:padding="7dip" >

            <EditText
                android:id="@+id/et_login_looklook_password_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="请输入您的手机号"
                android:singleLine="true"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/btn_login_looklook_clean_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/btn_del_press" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/ll_login_looklook_password_content"
            android:layout_marginTop="10dip"
            android:background="#AFAFBC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_line"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_login_looklook_password_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_xdialog_left"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="提交"
                android:textColor="@color/blue"
                android:textSize="16sp" />
            
            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#AFAFBC" />
            
            <Button
                android:id="@+id/btn_login_looklook_password_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_xdialog_right"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:text="取消"
                android:textColor="@color/blue"
                android:textSize="16sp" />
            
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>