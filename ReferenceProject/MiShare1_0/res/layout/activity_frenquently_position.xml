<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
    
    <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tou"
        >
        <ImageView 
            android:id="@+id/iv_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_back"
            />
         
         <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_frequently_position"
            android:textColor="@color/black"
            android:textSize="@dimen/setting_title"
            />
         
         <ImageView 
	         android:id="@+id/iv_edit_diary_save"
	         android:clickable="true"
	         android:layout_width="50dp"
	         android:layout_height="wrap_content"
	         android:layout_alignParentRight="true"
	         android:layout_centerVertical="true"
	         android:src="@drawable/btn_activity_edit_diary_save"
	         />
    </RelativeLayout>
    
    <ListView 
        android:id="@+id/lv_pos_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:cacheColorHint="#00000000" 
        android:divider="@null"
        >
        
    </ListView>
    
    <ImageView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liebiao_line"
        android:layout_below="@id/lv_pos_listview"
        android:layout_marginTop="-1dp"  
        />
    
</RelativeLayout>
