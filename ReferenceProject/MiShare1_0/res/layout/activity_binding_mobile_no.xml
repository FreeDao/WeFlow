<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white"
    >
    
    <LinearLayout 
        android:id="@+id/lly_choose_country"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_password_item_h"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone"
        >
        <TextView 
            android:id="@+id/tv_country_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="+86"
            android:textSize="18sp"
            android:layout_weight="11"
            android:paddingLeft="15dp"
            />
        <TextView 
            android:id="@+id/tv_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="中国"
            android:textSize="18sp"
            android:layout_weight="10"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="12"
            >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                />
        </LinearLayout>
    </LinearLayout>

    
    <TextView 
        android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/light_gray"
	    android:visibility="gone"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_password_item_h"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="手机绑定"
            android:textSize="@dimen/setting_max"
            android:layout_weight="12"
            android:paddingLeft="15dp"
            />
        
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
	        <EditText 
	            android:id="@+id/edit_mobile_no"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/transparent"
	            android:textColor="@color/black"
	            android:textSize="@dimen/setting_middle"
	            android:hint="手机号"
	            android:inputType="number"
	            android:maxLength="11"
	            android:singleLine="true"
	            />
	        <TextView 
	            android:id="@+id/tv_mobile_no"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/transparent"
	            android:textColor="@color/black"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/setting_middle"
	            android:maxLength="11"
	            android:singleLine="true"
	            android:visibility="gone"
	            />
	        
	        <TextView 
	            android:id="@+id/tv_mobile_ok"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ok"
	            android:layout_gravity="right|center_vertical"
	            android:layout_marginRight="6dp"
	            android:visibility="gone"
	            />
        </FrameLayout>
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="13"
            >
	        
            <Button 
                android:id="@+id/btn_send_mms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green_btn"
                android:text="发送"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_middle"
                android:visibility="gone"
                />
            <TextView 
                android:id="@+id/tv_mobile_error"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical|right"
		        android:text="手机格式错误"
		        android:textSize="@dimen/setting_min"
		        android:textColor="@color/gray"
		        android:drawableLeft="@drawable/nv"
		        android:visibility="gone"
		        />
        </FrameLayout>
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/light_gray"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_password_item_h"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="验证码"
            android:textSize="@dimen/setting_max"
            android:layout_weight="12"
            android:paddingLeft="15dp"
            />
        <FrameLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            >
	        <EditText 
	            android:id="@+id/edit_yzm"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/transparent"
	            android:textColor="@color/black"
	            android:textSize="@dimen/setting_middle"
	            android:hint="输入验证码"
	            android:inputType="number"
	            android:maxLength="6"
	            android:singleLine="true"
	            />
	        <TextView 
	            android:id="@+id/tv_yzm"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/transparent"
	            android:textColor="@color/black"
	            android:gravity="center_vertical"
	            android:textSize="@dimen/setting_middle"
	            android:maxLength="6"
	            android:singleLine="true"
	            android:visibility="gone"
	            />
	        <TextView 
	            android:id="@+id/tv_yzm_ok"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/ok"
	            android:layout_gravity="right|center_vertical"
	            android:layout_marginRight="6dp"
	            android:visibility="gone"
	            />
	        <ProgressBar
	            android:id="@+id/pb_verify_wait"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right|center_vertical"
		        style="?android:attr/progressBarStyleSmall"
		        android:visibility="gone"
		        >
	    </ProgressBar>
        </FrameLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="13"
            >
	        <TextView 
		        android:id="@+id/tv_yzm_error"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_vertical|right"
		        android:text="验证码有误"
		        android:textSize="@dimen/setting_min"
		        android:textColor="@color/gray"
		        android:drawableLeft="@drawable/nv"
		        android:visibility="gone"
		        />
        </LinearLayout>
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
	    android:layout_height="1px"
	    android:background="@color/light_gray"
        />
    
    <LinearLayout 
        android:id="@+id/ll_space_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TextView 
	        android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="@color/gray"
		    android:textSize="@dimen/setting_min"
		    android:paddingLeft="15dp"
		    android:paddingRight="10dp"
		    android:layout_marginTop="10dp"
		    android:text="*绑定你的手机号，可以使你与手机通讯录中的好友互相发现，同时可以作为用户名进行登陆，也是找回密码的唯一途径。"
	        />
        
    </LinearLayout>
    
    
    
</LinearLayout>
