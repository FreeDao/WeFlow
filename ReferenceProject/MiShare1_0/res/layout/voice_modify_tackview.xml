<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_biezhen"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/voice_description_tackview">

    <ImageView
        android:id="@+id/iv_biezhen_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/yuyin_bofang_1"/>

    <TextView
        android:id="@+id/tv_biezhen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_biezhen_sound"
        android:layout_marginLeft="15dp"
        android:textColor="@color/white"
        android:text="30&quot;"
        android:textSize="16sp" />

</RelativeLayout>