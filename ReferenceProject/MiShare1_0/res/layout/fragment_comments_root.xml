<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tou_2ceng"
        android:orientation="horizontal" >

        <LinearLayout 
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:layout_marginLeft="30dip"
        	android:layout_marginRight="30dip"
        	android:background="@drawable/qiehuan1_1"
        	android:layout_gravity="center"
            >
	        <TextView
	            android:id="@+id/iv_accept_comments"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_gravity="center"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:paddingTop="7dip"
	            android:paddingBottom="7dip"
	            android:text="收到的评论"
	            android:background="@drawable/qiehuan1_2"
	            android:textColor="#007AFF" />
	
	        <TextView
	            android:id="@+id/iv_send_comments"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_gravity="center"
	            android:layout_weight="1"
	            android:paddingTop="7dip"
	            android:paddingBottom="7dip"
	            android:text="发出的评论"
	            android:gravity="center"
	            android:textColor="#7D7D7D" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout 
        android:id="@+id/fly_cmm_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
        

</LinearLayout>