<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    
    <FrameLayout 
	    android:id="@+id/fly_recogn_view"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="6dp"
	    />
    
    <ImageView
	    android:id="@+id/img_dian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:background="@drawable/push_dian"
	    android:layout_marginRight="3dp"
	    android:visibility="gone"
	    />
	
	<FrameLayout 
	    android:id="@+id/ll_biezhen"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/record_tackview_bg_right">
	
	    <ImageView
	        android:id="@+id/iv_biezhen_sound"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|right"
	        android:layout_marginLeft="2dp"
	        android:src="@drawable/yuyinbofang_faqiren_3"/>
	
	    <TextView
	        android:id="@+id/tv_biezhen_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|left"
	        android:paddingLeft="5dp"
	        android:textColor="@color/white"
	        android:textSize="16sp" />
	
	</FrameLayout>

</LinearLayout>