<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<RelativeLayout
	    android:id="@+id/title"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/tou">
	
	   	<ImageButton
	   	    android:id="@+id/ib_title_back"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="5dp"
	   	    android:layout_centerVertical="true"
	   	    android:background="@drawable/btn_title_back"
	   	    android:visibility="invisible"/>
	   	
	   	<TextView
	   	    android:id="@+id/tv_title_text"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_centerVertical="true"
	   	    android:layout_centerHorizontal="true"
	   	    android:textSize="18sp"
	   	    android:textColor="#ff202020"/>
	   	
	   	<Button
	   	    android:id="@+id/btn_done"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_alignParentRight="true"
	   	    android:layout_marginRight="10dp"
	   	    android:layout_centerVertical="true"
	   	    android:textSize="18sp"
	   	    android:text="@string/load_finish"
	   	    android:background="@color/transparent"
	   	    android:textColor="@color/tv_save_btn_color_selector"/>
   	
	</RelativeLayout>
	
	<ListView
	    android:id="@+id/lv_diary"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@id/title"
	    android:cacheColorHint="@color/transparent"
	    android:listSelector="@color/transparent"
	    android:divider="@drawable/bg_diarydetail_list_line"
        android:background="@color/white"/>
    
</RelativeLayout>