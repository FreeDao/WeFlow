<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_listview_item"
        >
   <RelativeLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:id="@+id/rl_content"
        >
<com.cmmobi.looklook.common.view.VshareContentThumbnailView
	    android:id="@+id/vctv_vshare"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	/>
    <RelativeLayout 
        android:id="@+id/rl_info"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@+id/vctv_vshare"
	    android:layout_centerVertical="true"
	    android:paddingLeft="5dp"
	    >
	    
         <TextView
	        android:id="@+id/tv_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/gray"
	        android:singleLine="true"
	        android:textSize="@dimen/setting_min"
	        android:paddingRight="10dp"
	        android:layout_alignParentRight="true" 
	        />  
	        
 	    <TextView
	      android:id="@+id/tv_content"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_toLeftOf="@id/tv_time"
	      android:layout_marginRight="10dp"
	      android:textSize="@dimen/setting_max"
	      android:textColor="@color/black"
	      android:singleLine="true"
	      android:ellipsize="end"
	      android:layout_alignTop="@id/tv_time"/>
 	     
 	     <TextView
	      android:id="@+id/tv_last_message"
	      android:layout_width="fill_parent"
	      android:layout_height="wrap_content"
	      android:layout_alignParentLeft="true"
	      android:layout_below="@+id/tv_content"
	      android:singleLine="true"
	      android:textColor="@color/gray"
	      android:textSize="@dimen/setting_min"
	      android:layout_marginRight="50dp"
	      android:layout_marginTop="8dp"
	      android:layout_alignParentBottom="true"
	      android:ellipsize="end"/>
 	    
 	      
	 	   
	 	  
 	    <ImageView
	        android:id="@+id/iv_error"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:visibility="gone"
	        android:layout_alignParentRight="true" 
	        android:layout_alignBottom="@+id/tv_content"
	        android:src="@drawable/vshare_loading"/> 
	  
 	  	<RelativeLayout 
 	        android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:gravity="center"
       		android:layout_alignBottom="@+id/tv_last_message"
       		android:layout_alignTop="@+id/tv_last_message"
       		android:layout_alignParentRight="true"
       		android:layout_marginRight="10dp"
 	        >
 	        <ImageView 
 	            android:id="@+id/iv_jiaobiao"
 	            android:layout_width="wrap_content"
 	            android:layout_height="wrap_content"
 	            android:src="@drawable/jiaobiao_1"
 	            android:layout_centerInParent="true"
 	            />
 	         <TextView
		        android:id="@+id/tv_count"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:layout_centerInParent="true"
		        android:textSize="@dimen/setting_mini"
		        android:textColor="@color/white"
		         />
		 	       
 	</RelativeLayout>
 	
 	  	 	<ImageView
 	  	 	    android:id="@+id/iv_throwaway"
 	        android:layout_width="wrap_content"
       		android:layout_height="wrap_content"
       		android:src="@drawable/yhjf_fb"
       		android:layout_alignBottom="@+id/tv_last_message"
       		android:layout_alignTop="@+id/tv_last_message"
       		android:layout_alignParentRight="true"
       		android:layout_marginRight="10dp"
       		android:visibility="gone"
 	        />
 	
 	</RelativeLayout>
 	    
<ImageView
    android:id="@+id/iv_line"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/liebiao_line"
    />
<ImageView
    android:id="@+id/iv_checked"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:layout_alignTop="@id/vctv_vshare"
    android:layout_alignBottom="@id/vctv_vshare"
    android:src="@drawable/baoxianxiang_xuanzhong"
    android:visibility="gone"
    />
</RelativeLayout>
   		
   		<ImageView 
   		    android:id="@+id/iv_nodata"
   		    android:layout_width="fill_parent"
   		    android:layout_height="wrap_content"
   		    android:src="@drawable/ylwxsmbqdjy"
   		    android:scaleType="center"
   		    android:layout_marginTop="60dp"
   		    android:visibility="gone"
   		    />
</RelativeLayout>