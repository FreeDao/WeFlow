<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/micshare_login_bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="302" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="170" >

            <Button
                android:id="@+id/btn_activity_login_main_looklook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dip"
                android:layout_marginTop="3dip"
                android:background="@drawable/btn_activity_login_main_looklook" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="326" >
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/del_cloud_space"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="333"
            android:orientation="vertical"
            android:gravity="center_horizontal" >
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ksdl"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_activity_login_main_sina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-12dip"
                    android:background="@drawable/btn_activity_login_main_sina" />
                
                <Button
                    android:id="@+id/btn_activity_login_main_qq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-12dip"
                    android:background="@drawable/btn_ksdl_qq_selector" />

                <Button
                    android:id="@+id/btn_activity_login_main_tencent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-12dip"
                    android:background="@drawable/btn_activity_login_main_tencent" />

                <Button
                    android:id="@+id/btn_activity_login_main_renren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="-12dip"
                    android:background="@drawable/btn_activity_login_main_renren" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>