<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/purple" >
        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="vertical" >
            <LinearLayout
	            android:id="@+id/linear02"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_item_height"
                    android:text="@string/sync_type"
                    android:textSize="@dimen/setting_max"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/setting_padding"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line" />
               	<LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:padding="@dimen/setting_padding"
	     			android:background="@color/white"
	                android:orientation="vertical">
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:text="@string/sync_type_explain"
	                    android:textColor="@color/black"
	                    android:textSize="@dimen/setting_max"/>

	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal"
	                    android:layout_marginTop="10dp" >
						<TextView
	                         android:id="@+id/tv_type_wifi"
	                         android:layout_width="fill_parent"
	                         android:layout_height="wrap_content"
	                         android:textColor="@color/black"
	                         android:layout_weight="1"
	                         android:gravity="center_horizontal"
	                         android:text="@string/sync_type_wifi"
	                         android:textSize="@dimen/setting_min"
	                         android:drawableBottom="@drawable/xuanzhong_2" />
                 		<TextView
	                         android:id="@+id/tv_type_any"
	                         android:layout_width="fill_parent"
	                         android:layout_height="wrap_content"
	                         android:layout_weight="1"
	                         android:gravity="center_horizontal"
	                         android:textColor="@color/black"
	                         android:text="@string/sync_type_any" 
	                         android:textSize="@dimen/setting_min"
	                         android:drawableBottom="@drawable/xuanzhong_1" />
                	</LinearLayout>                 
            	</LinearLayout>
     			<ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line" />
                   
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_item_height"
                    android:text="@string/base_setting"
                    android:textSize="@dimen/setting_max"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/setting_padding"
                    android:gravity="center_vertical"/>
                
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line" />
                
                <LinearLayout
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:padding="@dimen/setting_padding"
	     			android:background="@color/white"
	                android:orientation="vertical">
	                <TextView
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:text="@string/contact_auto"
	                    android:textColor="@color/black"
	                    android:textSize="@dimen/setting_max"/>

	                <LinearLayout
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:orientation="horizontal"
	                    android:layout_marginTop="10dp" >
						<TextView
	                         android:id="@+id/tv_type_auto"
	                         android:layout_width="fill_parent"
	                         android:layout_height="wrap_content"
	                         android:textColor="@color/black"
	                         android:layout_weight="1"
	                         android:gravity="center_horizontal"
	                         android:text="@string/auto"
	                         android:textSize="@dimen/setting_min"
	                         android:drawableBottom="@drawable/xuanzhong_2" />
                 		<TextView
	                         android:id="@+id/tv_type_manual"
	                         android:layout_width="fill_parent"
	                         android:layout_height="wrap_content"
	                         android:layout_weight="1"
	                         android:gravity="center_horizontal"
	                         android:textColor="@color/black"
	                         android:text="@string/manual" 
	                         android:textSize="@dimen/setting_min"
	                         android:drawableBottom="@drawable/xuanzhong_1" />
                	</LinearLayout>                 
            	</LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line" />
                <RelativeLayout
                    android:id="@+id/rl_phonebind"
                    android:layout_width="fill_parent"
                    android:paddingLeft="@dimen/setting_padding" 
                    android:paddingRight="@dimen/setting_padding" 
                    android:layout_height="@dimen/setting_item_height"
         			android:background="@drawable/setting_item_selector">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_bind"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/setting_max" />

                    <ImageView
                        android:id="@+id/iv_arrow01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/liebiao_arrow"
                        android:layout_marginLeft="@dimen/setting_arrow_padding" />

                    <TextView
                        android:id="@+id/tv_phonebindstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/iv_arrow01"
                        android:text="@string/not_bind"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/setting_middle" />
                    
                </RelativeLayout>
                
                <ImageView
	                    android:layout_width="fill_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_marginLeft="@dimen/setting_padding"
	                    android:background="@drawable/liebiao_line" />

                    <RelativeLayout
                        android:id="@+id/rl_personalinfo"
                        android:layout_width="fill_parent"
                        android:paddingLeft="@dimen/setting_padding"
                        android:paddingRight="@dimen/setting_padding"
                    	android:layout_height="@dimen/setting_item_height"
         				android:background="@drawable/setting_item_selector">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                         	android:layout_centerVertical="true"
                            android:text="@string/personal_info"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_max" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/liebiao_arrow" 
                            android:paddingLeft="@dimen/setting_arrow_padding"/>
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/setting_padding"
                        android:background="@drawable/liebiao_line" />

                    <RelativeLayout
                        android:id="@+id/rl_safebox"
                        android:layout_width="fill_parent"
                		android:paddingLeft="@dimen/setting_padding"
                        android:paddingRight="@dimen/setting_padding"
                    	android:layout_height="@dimen/setting_item_height"
         				android:background="@drawable/setting_item_selector">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/safe"
                            android:textColor="@color/black"
                            android:textSize="@dimen/setting_max" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/liebiao_arrow"
                            android:paddingLeft="@dimen/setting_arrow_padding" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/liebiao_line" />

                    <LinearLayout
                        android:id="@+id/rl_storagemanage"
                        android:layout_width="fill_parent"
                    	android:layout_height="@dimen/setting_item_height"
                    	android:orientation="horizontal"
         			>
						<Button 
						    android:id="@+id/btn_cleancache"
						    android:layout_width="fill_parent"
						    android:layout_height="fill_parent"
						    android:layout_weight="1"
						    android:text="@string/setting_clean_cache"
						    android:textColor="@color/white"
						    android:textSize="@dimen/setting_max"
						    android:background="@drawable/setting_btn_storage_clean_selector"
						    />
                    </LinearLayout>
				</LinearLayout>
             <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/setting_item_height"
                    android:textSize="@dimen/setting_max"
                    android:textColor="@color/gray"
                    android:layout_marginLeft="@dimen/setting_padding"
                    android:gravity="center_vertical"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line" />
                   	
                        
                   <RelativeLayout
                            android:id="@+id/rl_help"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/setting_item_height"
         					android:background="@drawable/setting_item_selector">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/help"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/setting_padding"
                                android:textSize="@dimen/setting_max" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/setting_padding"
                                android:src="@drawable/liebiao_arrow" />
                            <ImageView
			                    android:layout_width="fill_parent"
			                    android:layout_height="wrap_content"
			                    android:background="@drawable/liebiao_line"
			                    android:layout_alignParentBottom="true"
			                    android:layout_marginLeft="@dimen/setting_padding"/>
                        </RelativeLayout>
                        
               
                                       
                   <RelativeLayout
                            android:id="@+id/rl_feedback"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/setting_item_height"
         					android:background="@drawable/setting_item_selector">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/feedback"
                                android:textColor="@color/black"
                                android:layout_centerVertical="true"
                                android:paddingLeft="@dimen/setting_padding"
                                android:textSize="@dimen/setting_max" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/setting_padding"
                                android:src="@drawable/liebiao_arrow" />
                            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line"
                    android:layout_marginLeft="@dimen/setting_padding"
                    android:layout_alignParentBottom="true"/>
                        </RelativeLayout>
                   
                   
                   <RelativeLayout
                            android:id="@+id/rl_about"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/setting_item_height"
         					android:background="@drawable/setting_item_selector">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:text="@string/about_looklook"
                                android:textColor="@color/black"
                                android:paddingLeft="@dimen/setting_padding"
                                android:layout_centerVertical="true"
                                android:textSize="@dimen/setting_max" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:paddingRight="@dimen/setting_padding"
                                android:src="@drawable/liebiao_arrow" />
                            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/liebiao_line"
                    android:layout_alignParentBottom="true"/>
                        </RelativeLayout>

                    <Button
                        android:id="@+id/btn_exit"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/setting_item_height"
                        android:layout_marginTop="@dimen/setting_item_height"
                        android:background="@drawable/btn_activity_setting_bg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/setting_max"
                        android:text="@string/exit" />
                </LinearLayout>
            
        </ScrollView>
    </RelativeLayout>
