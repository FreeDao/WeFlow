<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_row_list_diary_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:paddingTop="3dp"
    android:paddingBottom="3dp" >
    
	<com.cmmobi.looklook.common.view.ContentThumbnailView
        android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/maptankuang_moren" />
        
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginLeft="9dp"
        android:orientation="vertical" >
        
        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="35dp"
        	android:layout_marginRight="12dp" >
        	<ImageView
        	    android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginTop="1.5dp"
        		android:background="@drawable/pin_3" />
        	<TextView
        	    android:id="@+id/tv_map_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:paddingLeft="2dp"
                android:textColor="#7D7D7D"
                android:textSize="11sp"
                android:text="北京市朝阳区八里庄东里莱锦文化产业园" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/tv_map_time"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentBottom="true"
    		android:layout_marginBottom="3dp"
    		android:textColor="#7D7D7D"
    		android:textSize="11sp"
    		android:text="昨天  20:12" />
    </RelativeLayout>

</RelativeLayout>