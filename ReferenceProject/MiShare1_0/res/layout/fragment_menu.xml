<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/right_sliding_tab"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/bj_960"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <!--
         <ImageView
        android:id="@+id/ll_go_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_logo"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        />

    -->

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/iv_head_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kongjian_morentouxiang"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="1px"
            android:layout_alignBottom="@id/iv_head_background"
            android:layout_alignLeft="@id/iv_head_background"
            android:layout_alignRight="@id/iv_head_background"
            android:layout_alignTop="@id/iv_head_background"
            android:scaleType="fitXY"
            android:src="@drawable/kongjian_morentouxiang" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_corner" 
            android:layout_alignBottom="@id/iv_head"
            android:layout_alignRight="@id/iv_head"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_enterTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23.5dp"
        android:background="@drawable/menu_push_kuang"
        android:layout_below="@id/rl_head"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_enterTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="99个任务上传中" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scrollbars="none"
         >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_private_msg"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />

            <View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_friends_recent"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />
            
			<View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_invite"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />
            <View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_contact"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />

            <View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_safebox"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />

            <View
                android:layout_width="@dimen/menu_line_width"
                android:layout_height="1px"
                android:layout_gravity="right"
                android:background="#AFAFBC" />

            <include
                android:id="@+id/btn_settings"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menu_item_height"
                layout="@layout/include_btn_slidingbar" />
        </LinearLayout>
    </ScrollView>

    <!--
