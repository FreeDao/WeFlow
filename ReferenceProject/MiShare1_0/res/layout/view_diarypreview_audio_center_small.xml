    <SeekBar
        android:id="@+id/sk_diarypreview_seek"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:max="100"
        android:maxHeight="2dip"
        android:minHeight="2dip"
        android:progress="50"
        android:progressDrawable="@drawable/progress_player_seekbar_drawable"
        android:thumb="@drawable/progress_player_thumb"
        android:thumbOffset="0dp" />

