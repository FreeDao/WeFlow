        <ImageView
            android:id="@+id/iv_diarypreview_audio_wheel_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/btn_diarypreview_audio_wheel_small" />

        <ImageView
            android:id="@+id/iv_diarypreview_audio_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:src="@drawable/btn_diarypreview_audio_play_small" />

        <ImageView
            android:id="@+id/iv_diarypreview_audio_wheel_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/btn_diarypreview_audio_wheel_small" />

        <TextView
            android:id="@+id/tv_diarypreview_audio_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="30sp" />
