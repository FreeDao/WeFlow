<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/btn_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_feature_1" 
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            />
        <RelativeLayout
            android:id="@+id/ll_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:paddingBottom="150dp"
	            android:layout_alignParentBottom="true"
                >
	            <ImageView
		            android:id="@+id/btn_picture"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_picture"
		            android:layout_marginLeft="5dp"
	            />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
            	android:layout_height="wrap_content" 
            	android:layout_alignParentBottom="true"
	            android:paddingLeft="62dp"
	            android:paddingBottom="140dp"
                >
	            <ImageView
		            android:id="@+id/btn_video"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_video" 
	            />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:paddingLeft="110dp"
	            android:paddingBottom="110dp"
                >
	            <ImageView
		            android:id="@+id/btn_record"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_record" 
	            />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:paddingLeft="140dp"
	            android:paddingBottom="62dp"
                >
	            <ImageView
		            android:id="@+id/btn_note"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_note" 
	            />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="150dp"
	            android:layout_alignParentBottom="true"
	            android:paddingBottom="5dp"
                >
	            <ImageView
		            android:id="@+id/btn_import"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/btn_import" 
	            />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>