<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/share_dialog_bg_gray"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" 
            android:paddingTop="10dip"
            android:paddingBottom="10dip">

            <Button
                android:id="@+id/btn_share_diary"
                style="@style/share_dialog_button_style"
                android:drawableTop="@drawable/icon_share_diary"
                android:text="我的空间" />

            <Button
                android:id="@+id/btn_share_pic"
                style="@style/share_dialog_button_style"
                android:drawableTop="@drawable/icon_share_pic"
                android:text="本地相册" />

            <Button
                android:id="@+id/btn_share_audio"
                style="@style/share_dialog_button_style"
                android:drawableTop="@drawable/icon_share_audio"
                android:text="本地音乐" />
            
            <Button
                style="@style/share_dialog_button_style"
                android:drawableTop="@drawable/icon_share_audio"
                android:text="本地音乐"
                android:visibility="invisible"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="10dip"
            android:text="@string/cancel"
            android:textColor="@color/blue"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>