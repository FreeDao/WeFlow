<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_diarypreview_mybottom"
  	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
    android:layout_alignParentBottom="true"
	android:background="@drawable/bg_comment_panel">
  	    
	<ImageView
        android:id="@+id/ib_diarypreview_myvshare"
   	    android:layout_width="0dp"
   		android:layout_height="wrap_content"
   		android:layout_weight="1"
   		android:src="@drawable/btn_diarypreview_vshare"/>
    
    <ImageView
        android:id="@+id/ib_diarypreview_friend"
   	    android:layout_width="0dp"
   		android:layout_height="wrap_content"
   		android:layout_weight="1"
   		android:src="@drawable/btn_diarypreview_friend"/>
   	    
</LinearLayout>