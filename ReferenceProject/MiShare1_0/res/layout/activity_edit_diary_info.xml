<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    xmlns:tackview ="http://schemas.android.com/apk/res/com.cmmobi.looklook">
    
    <include layout="@layout/include_activity_edit_titlebar"
        android:id="@+id/rl_edit_diary_info_top"/>
    
    <FrameLayout 
        android:id="@+id/fl_edit_diary_content"
        android:layout_width="fill_parent"
        android:layout_height="320dp"
        >
        <FrameLayout 
            android:id="@+id/fl_edit_diary_video"
            android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
            >
		    <RelativeLayout
		        android:id="@+id/video_view"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:background="@android:color/black"
		        android:gravity="center"
		        >
		    </RelativeLayout>
		    
		    <ImageView 
	            android:id="@+id/iv_video_preview"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="center"
	            android:scaleType="fitXY"
	            />
		    
	        <ImageView 
	            android:id="@+id/iv_video_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/play"
	            android:layout_gravity="center"
	            />
        </FrameLayout>
        
        <ImageView 
            android:id="@+id/iv_edit_diary_photo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            />
        
        <RelativeLayout 
            android:id="@+id/rl_edit_diary_note"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        >
	        <TextView 
		        android:id="@+id/tv_text_content"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:scrollbars="vertical"
		        android:gravity="top"
		        android:background="@drawable/bianqian_beijing"/>
	        <com.cmmobi.looklook.common.web.TackView
		   		android:id="@+id/ll_tackview"
		   		android:layout_width="wrap_content"
		   		android:layout_height="wrap_content"
		   		android:layout_marginBottom="8.5dp"
		   		android:layout_alignParentRight="true"
		   		android:layout_alignBottom="@id/tv_text_content"
		   		android:layout_marginRight="7dp"
		   		android:clickable="true"
		   		android:visibility="gone"
		   		tackview:backresource="@layout/view_create_note_tack"
		   		android:orientation="horizontal" />
       	</RelativeLayout>
       	
        <RelativeLayout 
	        android:id="@+id/rl_edit_diary_audio"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:background="@color/black"
	        android:visibility="gone"
	        >
	        
	        <TextView 
	            android:id="@+id/tv_date"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_marginLeft="15dp"
	            android:layout_marginBottom="14dp"
	            android:text="2013.10.21"
	            android:textSize="18sp"
	            android:textColor="@color/white"
	            />
	            
	        <ImageView 
	            android:id="@+id/iv_play"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="5dp"
	            android:src="@drawable/yinpin_play"
	            />
	        
	        <TextView
	            android:id="@+id/tv_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_above="@id/iv_play" 
	            android:layout_centerHorizontal="true"
	            android:layout_marginBottom="6dp"
	            android:text="00:00.00"
	            android:textColor="@color/white"
	            android:textSize="25sp"
	            />
	        
	        <SurfaceView 
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            />
	        
	        <RelativeLayout 
	            android:id="@+id/rl_wave_layout"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_above="@id/tv_time"
	            android:layout_marginTop="40dp"
	            >
	            
	        </RelativeLayout>
	    </RelativeLayout>
    </FrameLayout>
    
    <LinearLayout 
        android:id="@+id/ll_edit_diary_position_and_tag"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/fl_edit_diary_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        
        <RelativeLayout 
            android:id="@+id/rl_edit_diary_tag"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="8dp"
            >
            <TextView 
                android:id="@+id/tv_edit_diary_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_tag"
                android:textSize="18sp"
                android:textColor="#ff157ef8"
                />
            
            <LinearLayout
                android:id="@+id/ll_edit_diary_tag_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_edit_diary_tag"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                >
                
                <TextView 
                    android:id="@+id/tv_edit_diary_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@drawable/biaoqian_1"
                    />
                
                <TextView 
                    android:id="@+id/tv_edit_diary_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风景"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginLeft="-15dp"
                    android:background="@drawable/biaoqian_2_2"
                    />
                
                <TextView 
                    android:id="@+id/tv_edit_diary_tag_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biaoqian_2_2"
                    android:layout_marginLeft="-15dp"
                    android:visibility="gone"
                    android:text="+"
                    android:textColor="@color/white"
                    android:gravity="center"
                    />
                
                <TextView 
                    android:id="@+id/tv_edit_diary_tag_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/biaoqian_2_2"
                    android:gravity="center"
                    android:layout_marginLeft="-15dp"
                    android:text="+"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    />
                
            </LinearLayout>"
            
        </RelativeLayout>
        
    </LinearLayout>
    
    
    
</RelativeLayout>
