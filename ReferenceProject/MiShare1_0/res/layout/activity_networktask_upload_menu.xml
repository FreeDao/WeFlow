<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:orientation="vertical"
    android:gravity="center_horizontal"
	android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@null">

	<!-- Button
        android:id="@+id/btn_up_remove"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu_top"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:text="取消上传" /-->
    <Button
        android:id="@+id/btn_up_startpause"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu_top"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:text="暂停上传" />
    <ImageView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liebiao_line"/>

    <Button
        android:id="@+id/btn_up_share"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="@drawable/btn_menu_middle"
        android:textColor="@color/blue"
		android:textSize="18sp"
        android:text="取消分享" />

	<ImageView
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/liebiao_line"/>
    <Button
        android:id="@+id/btn_up_priority"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:background="@drawable/btn_menu_bottom"
        android:textColor="@color/blue"
		android:textSize="18sp"
        android:text="优先处理" />

    <Button
        android:id="@+id/btn_up_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_menu_one"
        android:textColor="@color/blue"
    	android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="取消" />

</LinearLayout>