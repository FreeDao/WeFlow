<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dip"
    android:layout_gravity="center" >

        <ImageView
            android:id="@+id/iv_gallery_pic"
            android:layout_width="125dp"
            android:layout_height="123dp"
            android:scaleType="fitXY"
            android:src="@drawable/gallrery_bg"/>

        <ImageView
            android:id="@+id/iv_gallery_chose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gou_gallery" 
            android:layout_alignBottom="@+id/iv_gallery_pic"
            android:layout_alignRight="@+id/iv_gallery_pic"
            android:visibility="gone"/>

</RelativeLayout>