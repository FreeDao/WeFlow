<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zhongjian"
        android:orientation="horizontal"
        >
        
         <ImageView 
            android:id="@+id/iv_edit_photo_position_no"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_edit_photo_position_no"
            android:src="@drawable/shuxian_zuo"
            />
         
         <TextView
            android:id="@+id/tv_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_photo_detail_position"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />
         
         <ImageView
            android:id="@+id/iv_edit_photo_position_yes"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/yes"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_edit_photo_position_yes"
            android:src="@drawable/shuxian_you"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_activity_edit_photo_detail_frequentlypos"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/bg_activity_edit_photo_dark"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="@string/edit_photo_detail_frequentlypos"
            android:layout_marginLeft="12dp"
            android:textColor="#1B1B1B"
            android:textSize="15sp"
            />
        
        <ImageView 
            android:id="@+id/iv_edit_photo_detail_tagarrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/arrow_edit"/>
        
    </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line_back"      
        />
    
    <ListView 
        android:id="@+id/lv_pos_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000" 
        android:divider="@drawable/friends_list_line"
        >
        
    </ListView>

</LinearLayout>
