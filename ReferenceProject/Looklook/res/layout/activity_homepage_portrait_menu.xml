<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:gravity="center_horizontal"
    android:paddingBottom="10dp"
    android:background="@drawable/tankuang"
    >
    <Button
        android:id="@+id/btn_from_camera"
         android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/btn_menu_white"
    	android:textColor="@android:color/black"
    	android:layout_marginTop="10dp"
    	android:text="拍照更改头像"
        />
    <Button
        android:id="@+id/btn_from_pictures"
         android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/btn_menu_white"
    	android:textColor="@android:color/black"
    	android:layout_marginTop="10dp"
    	android:text="从相册中选择头像"
        />
    <Button
        android:id="@+id/btn_set_mood"
         android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/btn_menu_white"
    	android:textColor="@android:color/black"
    	android:layout_marginTop="10dp"
    	android:text="设置心情短语"
        />
    <Button
        android:id="@+id/btn_cancel"
         android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:background="@drawable/btn_menu_black"
    	android:textColor="@android:color/white"
    	android:layout_marginTop="10dp"
    	android:text="取消"
        />
</LinearLayout>