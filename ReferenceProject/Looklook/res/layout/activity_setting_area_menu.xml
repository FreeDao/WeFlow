<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/tankuang"
    android:paddingBottom="@dimen/popwindow_title_margin">

    <RelativeLayout
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="@dimen/popwindow_title_margin"
    	android:textColor="@android:color/white"
    	android:layout_centerVertical="true"
    	android:layout_centerHorizontal="true"
    	android:text="@string/area_modify"
    	android:textSize="@dimen/setting_max"
        />

        <ImageView
            android:id="@+id/iv_commit_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popwindow_title_margin"
            android:layout_marginBottom="@dimen/popwindow_title_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/btn_activity_edit_photo_done" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ok"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/popwindow_item_margin"
        android:orientation="horizontal" >

        <com.cmmobi.sns.utils.wheel.widget.WheelView
            android:id="@+id/wv_province"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <com.cmmobi.sns.utils.wheel.widget.WheelView
            android:id="@+id/wv_district"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>