<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/rl_fragment_edit_voice_montage_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zhongjian"
        android:orientation="horizontal"
        >
        
         <ImageView 
            android:id="@+id/iv_edit_voice_montage_no"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_edit_voice_montage_no"
            android:src="@drawable/shuxian_zuo"
            />
         
         <TextView
            android:id="@+id/tv_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_photo_cutup"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />
         
         <ImageView
            android:id="@+id/iv_edit_voice_montage_yes"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/yes"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_edit_voice_montage_yes"
            android:src="@drawable/shuxian_you"
            />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ll_fragment_edit_voice_montage_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_start_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_jianji_time"
            android:gravity="center"
            android:text="00:00"
            android:visibility="invisible"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_end_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yinpin_jianji_time"
            android:text="04:23"
            android:gravity="center"
            android:textSize="13sp"
            android:visibility="invisible" />
    </LinearLayout>
    
    <com.cmmobi.looklook.common.view.SeekBarWithTwoThumb 
	    android:id="@+id/myseekbar" 
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:layout_gravity="center_horizontal"
	    android:scaleType="fitXY" 
	    android:src="@drawable/yinpin_jianji_1" 
	    />
    
    <LinearLayout
        android:id="@+id/ll_fragment_edit_voice_montage_save"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/iv_edit_voice_montage_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gou_pressed"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#1B1B1B"
            android:text="@string/only_selected_save"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_fragment_edit_voice_montage_delete"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/iv_edit_voice_montage_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gou_normal"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textColor="#1B1B1B"
            android:text="@string/only_selected_delete"/>
    </LinearLayout>

</LinearLayout>
