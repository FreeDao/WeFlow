<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bj"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/biaotilan"
        android:orientation="vertical" 
        >

        <!-- <ImageView -->
        <!-- android:id="@+id/friends_find_btn" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:layout_marginLeft="4dp" -->
        <!-- android:background="@drawable/btn_activity_friends_find" /> -->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <LinearLayout
                android:id="@+id/activity_friends_rg"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <ImageButton
                        android:id="@+id/radio_circle"
                        style="@style/main_tab_bottom"
                        android:background="@drawable/btn_activity_friends_circle" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" 
                    android:gravity="center_vertical"
                    >

                    <ImageButton
                        android:id="@+id/radio_message"
                        style="@style/main_tab_bottom"
                        android:background="@drawable/btn_activity_friends_message" />
                    <TextView 
                        android:id="@+id/message_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:background="@drawable/paopao"
                        android:layout_alignRight="@id/radio_message"
                        android:layout_marginTop="-10dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp" 
                    android:gravity="center_vertical"
                    >

                    <ImageButton
                        android:id="@+id/radio_contacts"
                        style="@style/main_tab_bottom"
                        android:background="@drawable/btn_activity_friends_tongxulu" />
                    <TextView 
                        android:id="@+id/contacts_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21"
                        android:background="@drawable/paopao"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_alignRight="@id/radio_contacts"
                        android:layout_marginTop="-12dp"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- <ImageView -->
        <!-- android:id="@+id/friends_contacts_btn" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_alignParentRight="true" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- android:layout_marginRight="4dp" -->
        <!-- android:background="@drawable/btn_activity_friends_contacts" /> -->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/friend_main_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>