<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/popwindow_title_margin"
    android:background="@drawable/tankuang"
    >
   <RelativeLayout
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_margin="@dimen/popwindow_title_margin"
    	android:textColor="@android:color/white"
    	android:layout_centerVertical="true"
    	android:layout_centerHorizontal="true"
    	android:text="@string/sex_modify"
    	android:textSize="@dimen/setting_max"
        />

        <ImageView
            android:id="@+id/iv_commit_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/popwindow_title_margin"
            android:layout_marginBottom="@dimen/popwindow_title_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@drawable/btn_activity_edit_photo_done" />
    </RelativeLayout>
    
 <com.cmmobi.sns.utils.wheel.widget.WheelView
            android:id="@+id/wv_sex"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1" />

</LinearLayout>