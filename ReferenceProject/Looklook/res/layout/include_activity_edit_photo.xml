<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/activity_top" >

        <ImageView
            android:id="@+id/iv_back"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/btn_activity_common_back"
            />
        
        <LinearLayout
	        android:id="@+id/ll_edit_diary_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:gravity="center" >
	
	        <TextView
	            android:id="@+id/tv_edit_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/edit_media_cover"
	            android:textColor="#FFFFFF"
	            android:textSize="18sp"
	            />
	
	        <ImageView
	            android:id="@+id/iv_xiala"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="5dp"
	            android:src="@drawable/xiala" />
	    </LinearLayout>
        
        <ImageView
            android:id="@+id/iv_edit_done"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/btn_activity_edit_photo_done"
            />
    </RelativeLayout>
