<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shijianzhou_bj" >

    <com.cmmobi.looklook.common.web.WebImageView
        android:id="@+id/iv_homepage_zone_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/homepage_zone_moren" />
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_homepage_zone_bg"
        android:layout_alignTop="@id/iv_homepage_zone_bg"
        android:layout_alignRight="@id/iv_homepage_zone_bg"
        android:layout_alignBottom="@id/iv_homepage_zone_bg"
        >
        
        <LinearLayout 
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginTop="105dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            >
	        <ImageView
	       	    android:id="@+id/iv_add_attention"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:src="@drawable/btn_activity_homepage_other_diary_addfriends"
		        />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginTop="105dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            >
	        <ImageView
       	     android:id="@+id/iv_privateletter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:src="@drawable/btn_activity_homepage_other_diary_privateletter"
                />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginTop="105dp"
            android:visibility="invisible"
            android:layout_alignParentRight="true"
            >
	        <ImageView
	       	    android:id="@+id/iv_blacklist"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:clickable="true"
		        android:src="@drawable/btn_activity_homepage_other_diary_blacklistoff" />
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/b5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="108dp"
            android:layout_marginTop="105dp"
            android:layout_alignParentRight="true"
            >
	        <ImageView
                 android:id="@+id/iv_extend_invisible"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:visibility="invisible"
                 android:src="@drawable/heimingdan_normal" />
        </LinearLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/ll_add_extend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_homepage_zone_bg"
        android:layout_marginTop="100dp"
        android:background="@drawable/fengsi_guanzhu_haoyou"
        android:orientation="horizontal"
        android:gravity="center"
         >
         
         <RelativeLayout 
             android:layout_width="0dp"
        	 android:layout_height="fill_parent"
        	 android:gravity="center"
        	 android:layout_weight="1"
        	 >
        	 
             <ImageView
                 android:id="@+id/iv_extend"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:clickable="true"
                 android:src="@drawable/btn_activity_homepage_other_diary_extend" />

         </RelativeLayout>
         <LinearLayout 
             android:id="@+id/ll_attention_count"
             android:layout_width="0dp"
        	 android:layout_height="fill_parent"
        	 android:orientation="vertical"
        	 android:gravity="center"
        	 android:layout_weight="1"
        	 >
	        <TextView
	            android:id="@+id/tv_attention_count"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	            />
	        <TextView
	             android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="@string/homepage_attention_title"
	            />
         </LinearLayout>
         <LinearLayout 
             android:id="@+id/ll_fans_count"
             android:layout_width="0dp"
        	 android:layout_height="fill_parent"
        	 android:orientation="vertical"
        	 android:gravity="center"
        	 android:layout_weight="1"
        	 >
	        <TextView
	            android:id="@+id/tv_fans_count"
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	            />
	        <TextView
	             android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="@string/homepage_fans"
	            />
         </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/ll_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_homepage_zone_bg"
        android:layout_alignLeft="@id/iv_homepage_zone_bg"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal" >
		
        <com.cmmobi.looklook.common.web.WebImageView
            android:id="@+id/iv_homepage_portrait"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/touxiang_kuang_bai"
            android:src="@drawable/head"
            android:scaleType="fitXY"
            android:padding="3dp"/>
		
        <LinearLayout
            android:id="@+id/ll_userinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical" >
	        
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
	            <TextView
	                android:id="@+id/tv_nickname"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#FFFFFF"
	                android:text="3岁的宁静"
	                android:layout_marginLeft="18dp"
	                android:textSize="14sp" />
	            <ImageView
	                android:id="@+id/iv_sex"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="2dp"
	                android:src="@drawable/mapnan"
	                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:orientation="horizontal"
                android:layout_marginTop="-20dp"
                android:gravity="center_vertical"
                >
				<ImageView
				    android:id="@+id/iv_mood"
				    android:layout_width="25dp"
	                android:layout_height="25dp"
	                android:padding="1dp"
	                android:src="@drawable/xinqing_chijing"
	                android:background="@drawable/touxiang_kuang_bai"
				    />
	            <TextView
	                android:id="@+id/tv_signature"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="琴瑟在于，岁月静好"
	                android:layout_marginLeft="3dp"
	                android:textColor="#FFFFFF"
	                android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_homepage_zone_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-10dp"
        android:paddingLeft="2dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shijian_bj" />

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/shijian_clock" />

        <ImageView
            android:id="@+id/iv_clock_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_clock"
            android:layout_alignLeft="@id/iv_clock"
            android:layout_alignRight="@id/iv_clock"
            android:layout_alignTop="@id/iv_clock" />

        <ImageView
            android:id="@+id/iv_clock_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_clock"
            android:layout_alignLeft="@id/iv_clock"
            android:layout_alignRight="@id/iv_clock"
            android:layout_alignTop="@id/iv_clock" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_clock"
            android:layout_toRightOf="@id/iv_clock"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_hour_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A0A0A0"
                android:text="2013-3-8"
                android:textSize="9sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_diarylist"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/ll_time" >
    </RelativeLayout>

</RelativeLayout>