<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_activity_yuantupian"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">

	<com.cmmobi.looklook.common.web.WebImageView
	    android:id="@+id/iv_picture"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:scaleType="matrix"
	    android:src="@drawable/dot_big"
	    android:layout_centerInParent="true"/>
	
	<LinearLayout
        android:id="@+id/ll_pic_top"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"/>

    <RelativeLayout
        android:id="@+id/rl_diarydetail_parm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/sk_diarydetail_seek"
        android:paddingBottom="40dp" >

        <ImageView
            android:id="@+id/iv_diarydetail_xinqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"/>

        <com.cmmobi.looklook.common.web.TackView
            android:id="@+id/iv_diarydetail_tack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:visibility="invisible"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/tv_diarydetail_desc" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_diarydetail_xinqing"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:visibility="invisible"/>
    </RelativeLayout>

    <SeekBar
        android:id="@+id/sk_diarydetail_seek"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:minHeight="1dp" 
        android:maxHeight="1dp"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/skb_activity_yuantupian_seekbar"
        android:visibility="invisible"
        android:thumb="@drawable/yuyin_jindu_2"
/>

</RelativeLayout>