<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#868686"
    android:orientation="horizontal"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tuijianwei_2" 
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/rec_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_dismiss"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="@string/recommend"
        android:layout_centerVertical="true"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/iv_recommend01"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/rec_text"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/iv_recommend02"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/iv_recommend01"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/iv_recommend03"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/iv_recommend02"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/iv_recommend04"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/iv_recommend03"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_activity_setting_pop"
        android:layout_centerVertical="true" />

</RelativeLayout>