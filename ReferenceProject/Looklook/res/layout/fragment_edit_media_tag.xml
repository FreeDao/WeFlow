<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/zhongjian"
        android:orientation="horizontal"
        >
        
         <ImageView 
            android:id="@+id/iv_edit_media_tag_no"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/no"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_edit_media_tag_no"
            android:src="@drawable/shuxian_zuo"
            />
         
         <TextView
            android:id="@+id/tv_edit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/edit_media_tag"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            />
         
         <ImageView
            android:id="@+id/iv_edit_media_tag_yes"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/yes"
            android:background="@drawable/bg_activity_edit_photo_dark"
            />
         
         <ImageView 
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_edit_media_tag_yes"
            android:src="@drawable/shuxian_you"
            />
    </RelativeLayout>
    
    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="9dp"
        android:text="@string/edit_media_tag_prompt"
        android:textSize="15sp"
        android:textColor="#1B1B1B"
        />
    
    <GridView
        android:id="@+id/gv_edit_media_tag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="8dp"
        />
    

</LinearLayout>
