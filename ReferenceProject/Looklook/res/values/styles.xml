<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="ActivityTheme" parent="android:Theme.NoTitleBar">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_button_font_big_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="dialog_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_button_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentOverlay" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.DialogActivity" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_dialog_activity</item>
    </style>

    <style name="Theme.SearchTheme" parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@color/translucence</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="text_view_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_view_button_selector</item>
        <item name="android:textSize">@dimen/text_view_button_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="effects_and_scenes_group_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:textOff">@null</item>
        <item name="android:textOn">@null</item>
        <item name="android:textColor">@color/effect_and_scene_button_text_selector</item>
        <item name="android:textSize">0sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="effects_and_scenes_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/effect_and_scene_button_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="soundtrack_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textSize">@dimen/effect_and_scene_button_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="effects_and_scenes_scroll_view_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0px</item>
        <item name="android:scrollbars">none</item>
        <item name="android:background">@color/dark_gray_translucence</item>
    </style>

    <style name="soundtrack_scroll_view_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0px</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:background">@drawable/bg_activity_home_main_bottom</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="tv_jiaobiao_style">
        <item name="android:textSize">8sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/jiaobiao</item>
    </style>

    <style name="editext_background" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/editext_activity_my_edittext</item>
    </style>

    <style name="mycheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_activity_altfriend_checked</item>
    </style>

    <style name="myedittext" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/editext_activity_my_edittext_one</item>
        <item name="android:textSize">@dimen/setting_middle</item>
    </style>

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/storage_popup_animation</item>
        <item name="android:windowExitAnimation">@anim/storage_popup_hidden</item>
    </style>

    <style name="pop_commend_style">
        <item name="android:windowEnterAnimation">@anim/slide_down_recommend</item>
        <item name="android:windowExitAnimation">@anim/slide_down_recommend_back</item>
    </style>

    <style name="CmmobiDialog" parent="@android:style/Theme.Dialog">
     <item name="android:windowFrame">@null</item> <!--Dialog的windowFrame框为无 --> 
     <item name="android:windowIsFloating">true</item><!-- 是否漂现在activity上 -->
     <item name="android:windowIsTranslucent">true</item><!-- 是否半透明 -->
     <item name="android:windowNoTitle">true</item>
     <item name="android:backgroundDimEnabled">false</item>
     <item name="android:windowBackground">@android:color/transparent</item>
   </style>
</resources>