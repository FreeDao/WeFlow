<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingRight="1dp"
    >
    
    <ImageView 
        android:id="@+id/iv_playbill"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />
    
    <TextView 
        android:id="@+id/tv_playbill_name"
        android:layout_width="fill_parent"
        android:layout_height="33dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="8dp"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_viewpager_text"
        android:textColor="@color/white"/>
    
    <TextView 
        android:id="@+id/tv_media_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingLeft="6dp"
        android:layout_marginTop="18dp"
        android:singleLine="true"
        android:background="@drawable/pic_index_title_bg"
        android:textColor="@color/white"
        android:visibility="gone"/>

</RelativeLayout>
