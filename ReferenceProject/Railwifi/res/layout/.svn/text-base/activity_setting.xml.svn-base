<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/bg_seleted" />

    <RelativeLayout 
            android:id="@+id/btn_download_manage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_with_shape"
            android:gravity="center_vertical" 
            >
            
            <TextView
                android:id="@+id/tv_download_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/download_manage"
                android:textColor="@color/black"
                android:textSize="16sp" />
            
            <ImageView 
                android:id="@+id/iv_tips"
                android:layout_width="8dp"
         		android:layout_height="8dp"
          		android:layout_toRightOf="@id/tv_download_manage"
          		android:layout_centerVertical="true"
          		android:layout_marginLeft="8dp"
          		android:src="@drawable/icon_prompt"
          		android:visibility="gone"
                />

            <ImageView
                android:id="@+id/check_update_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/icon_arrow" />
            
        </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">
        
        <RelativeLayout
            android:id="@+id/btn_check_update"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/list_item_with_shape"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="@string/check_update"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:id="@+id/btn_clear_cache"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_with_shape"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="6dp"
                android:text="@string/clear_cache"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_disk_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:gravity="center"
                android:text="12M"
                android:textColor="@color/order_good_add_color"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/list_divider_color" />

        <RelativeLayout
            android:id="@+id/btn_clear_history"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/list_item_with_shape"
            android:gravity="center_vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="@string/clear_history"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/clear_history_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="9dp"
                android:src="@drawable/icon_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bg_line" />

</LinearLayout>