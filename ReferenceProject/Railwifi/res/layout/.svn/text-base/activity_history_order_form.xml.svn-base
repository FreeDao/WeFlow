<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1" >
    
    <ListView 
        android:id="@+id/lv_history_order"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="6dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="12dp"
        >
        
    </ListView>
    
    <RelativeLayout 
        android:id="@+id/rl_empty"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/background"
        android:visibility="gone"
        >
        <RelativeLayout 
	        android:id="@+id/rl_bottom"
	        android:layout_width="fill_parent"
	        android:layout_height="88dp"
	        android:layout_alignParentBottom="true"
	        android:background="@color/white"
	        >
        	
            <Button 
                android:id="@+id/btn_go_shopping"
                android:layout_width="160.5dp"
                android:layout_height="63dp"
                android:text="去订餐购物"
                android:textColor="@color/color_bottom_shopping"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_bottom_shopping"
                />
    	</RelativeLayout>
    	
        <RelativeLayout 
            android:id="@+id/rl_empty_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/rl_bottom"
            
            >
            
            <ImageView 
	            android:id="@+id/iv_empty"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            />
            
            <TextView 
                android:id="@+id/tv_empty_go_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_below="@id/iv_empty"
                android:text="没有历史订单哦~"
                android:textColor="@color/title_bar_text_color"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textSize="24sp"
                />
            
        </RelativeLayout>
        
        
    </RelativeLayout>
    
    

</RelativeLayout>
