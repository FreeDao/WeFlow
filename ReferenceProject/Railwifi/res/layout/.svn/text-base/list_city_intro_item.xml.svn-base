<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopping_item_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_city_img"
        android:layout_width="159dp"
        android:layout_height="111dp"
        android:background="@drawable/order_img_bg"
        >

        <ImageView
            android:id="@+id/im_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/order_stroke_width"
            android:scaleType="fitXY"/>
        
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:contentDescription="图片找不到啦"
            android:background="#30000000"
            android:src="@drawable/btn_movie_play"
             />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="钢铁侠"
        android:textColor="@color/title_bar_text_color"
        android:layout_marginTop="6dp"
        android:includeFontPadding="false"
        android:textSize="21sp" />

</LinearLayout>