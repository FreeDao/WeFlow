<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <View
        android:id="@+id/v_divide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e5e5e5" />

    <RelativeLayout
        android:id="@+id/rl_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/v_divide" >

        <TextView
            android:id="@+id/tv_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="北京朝阳区"
            android:textColor="#212434"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_addr_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_addr"
            android:layout_alignLeft="@+id/tv_addr"
            android:layout_alignRight="@+id/tv_addr"
            android:includeFontPadding="false"
            android:text="所在地区"
            android:textColor="#888888"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_addr"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#dcdcdc" />

    <EditText
        android:id="@+id/et_addr_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_addr"
        android:hint="请输入详细地址"
        android:inputType="text"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_addr_detail"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#dcdcdc" />

    <EditText
        android:id="@+id/et_receipt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_addr_detail"
        android:hint="请输入收货人姓名"
        android:inputType="text"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_receipt_name"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#dcdcdc" />

    <EditText
        android:id="@+id/et_receipt_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_receipt_name"
        android:hint="请输入收货人联系电话"
        android:inputType="phone"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_receipt_tel"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#dcdcdc" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_receipt_tel"
        android:hint="请输入邮政编码"
        android:inputType="number"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/et_code"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="#dcdcdc" />

</RelativeLayout>