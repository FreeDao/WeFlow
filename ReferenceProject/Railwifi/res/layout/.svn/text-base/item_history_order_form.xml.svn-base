<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
     >
     
    <View 
        android:id="@+id/view_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ffaa78"
        />
    
    <ImageView 
        android:id="@+id/iv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6dp"
        android:src="@drawable/state_icon_success"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_order_user_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        >
        
	    <TextView 
	        android:id="@+id/tv_order_user_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="姓名："
	        android:textColor="@color/title_bar_text_color"
	        android:textSize="15sp"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_order_user"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="刘先生"
	        android:textColor="@color/order_good_add_color"
	        android:textSize="15sp"
	        android:layout_alignTop="@id/tv_order_user_label"
	        android:layout_toRightOf="@id/tv_order_user_label"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_order_tel_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="电话："
	        android:textColor="@color/title_bar_text_color"
	        android:layout_below="@id/tv_order_user_label"
	        android:layout_marginTop="12dp"
	        android:textSize="15sp"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_order_tel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="186****0329"
	        android:textColor="@color/order_good_add_color"
	        android:textSize="15sp"
	        android:layout_alignTop="@id/tv_order_tel_label"
	        android:layout_toRightOf="@id/tv_order_tel_label"
	        />
	    
	    <RelativeLayout 
	        android:id="@+id/rl_eat_position"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/tv_order_tel_label"
		    android:layout_marginTop="12dp"
	        >
	        <RelativeLayout 
		        android:id="@+id/rl_eat_at_site"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="gone"
		        >
		        <TextView 
			        android:id="@+id/tv_order_rail_num_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="车厢："
			        android:textColor="@color/title_bar_text_color"
			        android:textSize="15sp"
			        />
		    
			    <TextView 
			        android:id="@+id/tv_order_rail_num"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="01"
			        android:textColor="@color/order_good_add_color"
			        android:textSize="15sp"
			        android:layout_alignTop="@id/tv_order_rail_num_label"
			        android:layout_toRightOf="@id/tv_order_rail_num_label"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_order_site_num_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="座位号："
			        android:textColor="@color/title_bar_text_color"
			        android:layout_alignTop="@id/tv_order_rail_num_label"
			        android:layout_toRightOf="@id/tv_order_rail_num_label"
			        android:layout_marginLeft="70.5dp"
			        android:textSize="15sp"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_order_site_num"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="88"
			        android:textColor="@color/order_good_add_color"
			        android:textSize="15sp"
			        android:layout_alignTop="@id/tv_order_site_num_label"
			        android:layout_toRightOf="@id/tv_order_site_num_label"
			        />
		        
		    </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_eat_at_car"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            >
			    
	            <TextView 
			        android:id="@+id/tv_eat_position"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="地点："
			        android:textColor="@color/title_bar_text_color"
			        android:textSize="15sp"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_eat_at_car"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="餐车就餐"
			        android:textColor="@color/order_good_add_color"
			        android:textSize="15sp"
			        android:layout_alignTop="@id/tv_eat_position"
			        android:layout_toRightOf="@id/tv_eat_position"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_site_count_label"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="人数："
			        android:textColor="@color/title_bar_text_color"
			        android:layout_below="@id/tv_eat_position"
			        android:layout_marginTop="12dp"
			        android:textSize="15sp"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_site_count"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:includeFontPadding="false"
			        android:text="5位"
			        android:textColor="@color/order_good_add_color"
			        android:textSize="15sp"
			        android:layout_alignTop="@id/tv_site_count_label"
			        android:layout_toRightOf="@id/tv_site_count_label"
			        />
	            
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <TextView 
	        android:id="@+id/tv_order_time_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="时间："
	        android:textColor="@color/title_bar_text_color"
	        android:layout_marginTop="12dp"
	        android:layout_below="@id/rl_eat_position"
	        android:textSize="15sp"
	        />
	    
	    <TextView 
	        android:id="@+id/tv_order_time"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:includeFontPadding="false"
	        android:text="2014.11.29 14:00"
	        android:textColor="@color/order_good_add_color"
	        android:textSize="15sp"
	        android:layout_alignTop="@id/tv_order_time_label"
	        android:layout_toRightOf="@id/tv_order_time_label"
	        />
    </RelativeLayout>
    
    <View 
        android:id="@+id/view_mid_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        android:layout_below="@id/rl_order_user_info"
        android:layout_marginTop="13.5dp"
        android:layout_marginLeft="5.5dp"
        android:layout_marginRight="5.5dp"
        />
    
    <com.cmmobi.railwifi.view.HistoryOrderFormView 
        android:id="@+id/view_history_order_form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_mid_line"
        android:layout_marginLeft="15dp"
        >
    </com.cmmobi.railwifi.view.HistoryOrderFormView>
    
    <View 
        android:id="@+id/view_bottom_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#a1a1a1"
        android:layout_below="@id/view_history_order_form"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="5.5dp"
        android:layout_marginRight="5.5dp"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_total_price"
        android:layout_width="fill_parent"
        android:layout_height="49.5dp"
        android:layout_below="@id/view_bottom_line"
        >
	    <TextView
	        android:id="@+id/tv_total_price"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="总消费：298.23元" 
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="15dp"
	        android:layout_centerVertical="true"
	        android:textSize="18sp"
	        android:textColor="@color/order_good_add_color"
	        />
        
    </RelativeLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#a8a8a8"
        android:layout_below="@+id/rl_total_price"
        />
</RelativeLayout>
