<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_travel"
    android:background="@color/background"
    android:orientation="vertical" >

   		    <LinearLayout 
   		        android:id="@+id/ll_check_tab"
   		        android:layout_width="fill_parent"
   		        android:layout_height="wrap_content"
   		        android:orientation="horizontal"
   		        >
   		        <Button 
   		            android:id="@+id/btn_check_one"
   		            android:layout_weight="1"
   		            android:layout_width="fill_parent"
   		            android:layout_height="fill_parent"
   		            android:background="@drawable/table_left_selected_3"
   		            android:text="未支付"
   		            />
   		        <Button 
   		            android:id="@+id/btn_check_two"
   		            android:layout_weight="1"
   		            android:layout_width="fill_parent"
   		            android:layout_height="fill_parent"
   		            android:background="@drawable/table_right_default_3"
   		            android:text="已支付"
   		            />
   		    </LinearLayout>
   		    

   		        <RelativeLayout
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        />
   		        

</LinearLayout>
