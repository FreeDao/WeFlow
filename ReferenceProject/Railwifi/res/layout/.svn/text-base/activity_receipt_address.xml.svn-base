<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <View
            android:id="@+id/v_divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/background" />

        <ListView
            android:id="@+id/lv_receipt_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divide"
            android:divider="@color/background" />

        <View
            android:id="@+id/v_divide_bottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/lv_receipt_addr"
            android:background="#dcdcdc" />

        <RelativeLayout
            android:id="@+id/rl_new_receipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_divide_bottom" >

            <Button
                android:id="@+id/btn_new_receipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_receipt_new_addr"
                android:includeFontPadding="false"
                android:text="新增收货地址"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>