<?xml version="1.0" encoding="utf-8"?>
 <ScrollView 
      android:id="@+id/sv_info" xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
       android:background="@color/background" 
      >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_all">
 
  <RelativeLayout
       android:id="@+id/rl_contact_info"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@color/white" >
		        <View 
			        android:id="@+id/view_contact_line"
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:background="#ffaa78"
			        />
		    
			    <TextView 
			        android:id="@+id/tv_contact_name"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:gravity="center"
			        android:text="姓名"
			        android:textSize="18sp"
			        android:layout_marginTop="12dp"
			        android:layout_marginLeft="6dp"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg"
			        />
			    
			    <EditText 
			        android:id="@+id/et_contact_name"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_top"
			        android:layout_toRightOf="@id/tv_contact_name"
			        android:layout_alignTop="@id/tv_contact_name"
			        android:hint="请填写联系人姓名"
			        android:textColorHint="#888888"
			        android:maxLength="10"
			        android:paddingLeft="10dp"
			        android:singleLine="true"
			        />
			    
			       <ImageView 
			        android:id="@+id/iv_name_error"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/et_contact_name"
			        android:layout_alignBottom="@+id/et_contact_name"
			        android:layout_alignRight="@+id/et_contact_name"
			        android:src="@drawable/icon_input_error"
			        android:visibility="gone"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_contact_celphone"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:layout_below="@id/tv_contact_name"
			        android:gravity="center"
			        android:text="手机"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <EditText 
			        android:id="@+id/et_contact_celphone"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_contact_celphone"
			        android:layout_alignTop="@id/tv_contact_celphone"
			        android:hint="请输入手机号码"
			        android:inputType="phone"
			        android:textColorHint="#888888"
			        android:maxLength="11"
			        android:paddingLeft="10dp"
			        android:singleLine="true"
			        />
			    <ImageView 
			        android:id="@+id/iv_phone_error"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/et_contact_celphone"
			        android:layout_alignBottom="@+id/et_contact_celphone"
			        android:layout_alignRight="@+id/et_contact_celphone"
			        android:src="@drawable/icon_input_error"
			        android:visibility="gone"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_credentials"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:text="证件类"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:layout_below="@id/tv_contact_celphone"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_credentials_type"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_credentials"
			        android:layout_alignTop="@id/tv_credentials"
			        android:text="身份证"
			        android:textColor="@color/title_bar_text_color"
			        android:gravity="center_vertical"
			        android:paddingLeft="10dp"
			        android:drawableRight="@drawable/icon_arrow"
			         android:textSize="18sp"
			        />
			    
			    <TextView 
			        android:id="@+id/tv_contact_id_num"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:layout_below="@id/tv_credentials_type"
			        android:text="证件号"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <EditText 
			        android:id="@+id/et_contact_id_num"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_contact_id_num"
			        android:layout_alignTop="@id/tv_contact_id_num"
			        android:hint="请输入您的有效证件号码"
			        android:textColorHint="#888888"
			        android:paddingLeft="10dp"
			        android:singleLine="true"
			        android:maxLength="18"
			        />
			       <ImageView 
			        android:id="@+id/iv_id_error"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/et_contact_id_num"
			        android:layout_alignBottom="@+id/et_contact_id_num"
			        android:layout_alignRight="@+id/et_contact_id_num"
			        android:src="@drawable/icon_input_error"
			        android:visibility="gone"
			        />
			    <TextView 
			        android:id="@+id/tv_car"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:text="车厢"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:layout_below="@id/et_contact_id_num"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <EditText 
			        android:id="@+id/et_car_no"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_car"
			        android:layout_alignTop="@id/tv_car"
			        android:hint="请输入您所在的车厢"
			        android:textColorHint="#888888"
			        android:maxLength="3"
			        android:paddingLeft="10dp"
			        android:singleLine="true"
			        />
			    
			     <ImageView 
			        android:id="@+id/iv_car_error"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/et_car_no"
			        android:layout_alignBottom="@+id/et_car_no"
			        android:layout_alignRight="@+id/et_car_no"
			        android:src="@drawable/icon_input_error"
			        android:visibility="gone"
			        />
			    <TextView 
			        android:id="@+id/tv_seat"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:text="座位"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:layout_below="@id/et_car_no"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <EditText 
			        android:id="@+id/et_seat_no"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_seat"
			        android:layout_alignTop="@id/tv_seat"
			        android:hint="请输入您的座位"
			        android:textColorHint="#888888"
			        android:maxLength="3"
			        android:singleLine="true"
			        android:paddingLeft="10dp"
			        />
			    
			    
			     <ImageView 
			        android:id="@+id/iv_seat_error"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignTop="@+id/et_seat_no"
			        android:layout_alignBottom="@+id/et_seat_no"
			        android:layout_alignRight="@+id/et_seat_no"
			        android:src="@drawable/icon_input_error"
			        android:visibility="gone"
			        />
			     
			    <TextView 
			        android:id="@+id/tv_help"
			        android:layout_width="75dp"
			        android:layout_height="50dp"
			        android:text="类型"
			        android:gravity="center"
			        android:textSize="18sp"
			        android:layout_alignLeft="@id/tv_contact_name"
			        android:layout_below="@id/et_seat_no"
			        android:textColor="@color/title_bar_text_color"
			        android:background="@drawable/order_confirm_edit_bg_left"
			        />
			    
			    <TextView
			        android:id="@+id/tv_help_type"
			        android:layout_width="261dp"
			        android:layout_height="50dp"
			        android:background="@drawable/order_confirm_edit_bg_right"
			        android:layout_toRightOf="@id/tv_help"
			        android:layout_alignTop="@id/tv_help"
			        android:text="重大疾病"
			        android:textColor="@color/title_bar_text_color"
			         android:textSize="18sp"
			        android:gravity="center_vertical"
			        android:paddingLeft="10dp"
			        android:drawableRight="@drawable/icon_arrow"
			        />
					    
			    <View 
			        android:id="@+id/view_contact_bottom_line"
			        android:layout_width="fill_parent"
			        android:layout_height="1dp"
			        android:layout_below="@id/tv_help_type"
			        android:layout_marginTop="12dp"
			        android:background="#a8a8a8"
			        />
			   
		        
		    </RelativeLayout>

  			<EditText 
		        android:id="@+id/et_detail"
		        android:layout_width="fill_parent"
		        android:layout_below="@+id/rl_contact_info"
		        android:layout_height="200dp"
		        android:hint="请描述详细情况"
		        android:padding="12dp"
		        android:maxLength="300"
		        android:textColorHint="#888888"
		        android:scrollbars="vertical"
		        android:gravity="top"
		        android:background="@drawable/order_confirm_edit_bg_white"
		        />
 </RelativeLayout>
 </ScrollView>
