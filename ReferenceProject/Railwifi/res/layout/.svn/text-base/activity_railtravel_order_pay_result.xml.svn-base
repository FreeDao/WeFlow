<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:layout_gravity="center_horizontal">
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_content"
    >
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_smile"
        android:layout_alignParentLeft="true"
        />
    
    <TextView
        android:id="@+id/tv_ticket_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_icon"
        android:layout_alignTop="@+id/iv_icon"
        android:layout_alignBottom="@+id/iv_icon"
        android:textColor="#212434"
        android:gravity="center_vertical"
        android:singleLine="true"
        />
    <RelativeLayout 
        android:id="@+id/rl_travel"
        android:layout_below="@+id/iv_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
       
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#212434"/>
    <ImageView 
        android:id="@+id/iv_line" 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_name"
        android:src="@drawable/line_a"
        android:scaleType="centerCrop"
        />
    
       <ImageView 
        android:id="@+id/iv_success"
        android:layout_below="@+id/iv_line"
        android:gravity="center_vertical"
        android:scaleType="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_success"
        />
    
    <TextView
        android:id="@+id/tv_money"
        android:layout_below="@+id/iv_line"
        android:layout_toRightOf="@+id/iv_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="#000000"/>
    
 
  
    </RelativeLayout>
      <TextView 
          android:id="@+id/iv_lineb"
        android:layout_width="fill_parent"
        android:layout_height="1dp" 
        android:background="#a8a8a8"
        android:layout_below="@+id/rl_travel"
        />
    
   <ScrollView 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/iv_lineb"
       android:id="@+id/sv_scrollview"
       >
   <LinearLayout
       android:id="@+id/ll_info"
       
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@color/white"
       android:orientation="vertical"
       >
       <TextView 
           android:id="@+id/tv_address"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="签约地址"
           />
       <TextView 
           android:id="@+id/tv_addressdetail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="签约地址"
           />
        <TextView 
           android:id="@+id/tv_travel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="旅行社咨询电话"
           />
       <TextView 
           android:id="@+id/tv_traveldetail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="签约地址"
           />
        <TextView 
           android:id="@+id/tv_phone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="投诉电话"
           />
       <TextView 
           android:id="@+id/tv_phonedetail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="#212434"
           android:text="签约地址"
           />
         <TextView 
        android:layout_width="fill_parent"
        android:layout_height="1dp" 
        android:background="#a8a8a8"
        />
          <TextView 
       android:id="@+id/tv_recommend"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/title_bg"
       android:text="相关推荐"
       android:gravity="center"
       android:textColor="@color/white"
       />
 	 <com.cmmobi.railwifi.view.NoScrollGridView  
	    android:id="@+id/gv_imgs"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:numColumns="3"
	    android:stretchMode="columnWidth"
	    android:gravity="center"
	    android:background="@color/white"
	    android:listSelector="@android:color/transparent"
	/>
   </LinearLayout>
  </ScrollView>
  </RelativeLayout>
     <include layout="@layout/include_no_network" android:id="@+id/rl_empty"/>
</RelativeLayout>