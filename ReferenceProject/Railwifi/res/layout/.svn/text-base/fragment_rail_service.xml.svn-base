<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#e7e7e7">
    
     <RelativeLayout 
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         >
         <RelativeLayout 
	        android:id="@+id/rl_view_pager"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/viewpager_height"
	        android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_marginTop="6dp"
	        >
	        
		    <com.cmmobi.railwifi.view.autoscrollviewpager.AutoScrollViewPager
		        android:id="@+id/vp_pager_service"
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        />
		    
	        <com.viewpagerindicator.CirclePageIndicator
		        android:id="@+id/indicator_service"
		        android:padding="10dp"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_marginRight="8dp"
		        android:layout_alignParentRight="true"
		    	android:layout_alignParentBottom="true"
		        style="@style/CirclePageIndicator"
		        />
	        
	        <ImageView 
	            android:id="@+id/iv_net_error"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:visibility="gone"
	            />
	        
	    </RelativeLayout>
	    
		    
	        <RelativeLayout 
	            android:id="@+id/rl_function"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_below="@id/rl_view_pager"
	            android:layout_marginTop="6dp"
	            >
		        
	            <LinearLayout 
			        android:id="@+id/ll_row1"
			        android:layout_width="fill_parent"
			        android:layout_height="112dp"
			        android:orientation="horizontal"
			        android:layout_marginLeft="6dp"
			        android:layout_marginRight="6dp"
			        >
			        
			        <ImageView 
			            android:id="@+id/iv_railway_ording"
			            android:layout_width="0dp"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:background="@drawable/btn_index_shopping"
			            />
			        
			        <ImageView 
			            android:id="@+id/iv_satisfaction_survey"
			            android:layout_width="0dp"
			            android:layout_height="fill_parent"
			            android:layout_weight="1"
			            android:background="@drawable/btn_satisfaction_survey"
			            android:layout_marginLeft="6dp"
			            />
			        
			    </LinearLayout>
			    
	            <LinearLayout
	                android:id="@+id/ll_introduce"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_below="@id/ll_row1"
	                android:layout_marginLeft="6dp"
	                android:layout_marginRight="6dp"
	                android:layout_marginTop="6dp"
	                android:orientation="vertical" >
			        
	                <ImageView 
		                android:id="@+id/iv_railway_zixun"
		                android:layout_width="fill_parent"
		                android:layout_height="83dp"
		                android:background="@drawable/btn_information"
		                />
		            
		            <ImageView 
		                android:id="@+id/iv_warm_tips"
		                android:layout_width="fill_parent"
		                android:layout_height="83dp"
		                android:layout_marginTop="6dp"
		                android:src="@drawable/btn_prompt"
		                android:visibility="gone"
		                />
		            
		            <ImageView 
		                android:id="@+id/iv_service_introduce"
		                android:layout_width="fill_parent"
		                android:layout_height="83dp"
		                android:layout_marginTop="6dp"
		                android:background="@drawable/btn_service"
		                />
		            
		            <ImageView 
		                android:id="@+id/iv_suggest"
		                android:layout_width="fill_parent"
		                android:layout_height="83dp"
		                android:layout_marginTop="6dp"
		                android:background="@drawable/btn_complaint"
		                />
	                
	            </LinearLayout>
	            
	            <View 
	                android:id="@+id/view_bottom"
	                android:layout_width="fill_parent"
	                android:layout_height="1px"
	                android:layout_below="@id/ll_introduce"
	                android:layout_marginTop="6dp"
	                />
			    
	            
		    </RelativeLayout>
         
     </RelativeLayout>
    
</ScrollView>
