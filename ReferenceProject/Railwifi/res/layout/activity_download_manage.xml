<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/background"
    >
    
    <View 
        android:id="@+id/view_top_space"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:visibility="invisible"
        />
    
    <RelativeLayout 
        android:id="@+id/rl_download_done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >
        
        <RelativeLayout 
            android:id="@+id/rl_top_download_done"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            >
            <TextView 
                android:id="@+id/tv_top_download_done_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="下载完成"
                android:textColor="@color/title_bar_text_color"
                />
            <View 
                android:id="@+id/view_top_donwload_done_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#a1a1a1"
                android:layout_alignParentBottom="true"
                />
            
        </RelativeLayout>
        
        <ListView 
            android:id="@+id/lv_donwload_done"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/rl_top_download_done"
            android:visibility="gone"
            >
        </ListView>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rl_downloading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_download_done"
        >
        
        <RelativeLayout 
            android:id="@+id/rl_top_downloading"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            >
            <TextView 
                android:id="@+id/tv_top_downloading_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="正在下载"
                android:textColor="@color/title_bar_text_color"
                />
            <View 
                android:id="@+id/view_top_donwloading_line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#a1a1a1"
                android:layout_alignParentBottom="true"
                />
            
        </RelativeLayout>
        
        <ListView 
            android:id="@+id/lv_donwloading"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/rl_top_downloading"
            >
            
        </ListView>
        
        <View 
            android:id="@+id/view_bottom_donwloading_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#a1a1a1"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</RelativeLayout>
