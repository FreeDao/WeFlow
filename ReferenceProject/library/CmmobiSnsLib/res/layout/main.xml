<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical">
    
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/qqBtn"
		android:text="登录腾讯微薄"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/sinaBtn"
		android:text="登录新浪微薄"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/shareToSina"
		android:text="分享图片文字到新浪微博"/>
	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/shareToTencent"
		android:text="分享图片文字到腾讯微博"/>
	
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:text="中传分享库，封装新浪微博，腾讯微博分享api"/>
</LinearLayout>
