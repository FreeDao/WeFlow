<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f3f4f4"
    >
    
    <RelativeLayout 
        android:id="@+id/rl_account_phone"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="#ffffff"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        >
        
        <TextView 
            android:id="@+id/tv_account_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="18627934685"
            android:textColor="#e60012"
            android:textSize="16sp"
            />
        
        <TextView 
            android:id="@+id/tv_account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="账户绑定号码"
            android:textColor="#adadad"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            />
        
    </RelativeLayout>
    
    <!-- <GridView
        android:id="@+id/gv_plans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:verticalSpacing="8dp"
    	android:horizontalSpacing="8dp"
    	android:layout_marginTop="8dp"
	    android:scrollbars="vertical"
	    android:scrollbarStyle="insideOverlay"
	    android:gravity="center" 
	    android:layout_below="@id/rl_account_phone"
	    android:numColumns="4"
        >
    </GridView> -->
    
    
    <RelativeLayout 
        android:id="@+id/rl_pay_much"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/rl_account_phone"
        >
        
        <TextView 
            android:id="@+id/tv_pay_1"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:text="10元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:background="@drawable/bg_bill_item"
            android:clickable="true"
            />
        
        <TextView 
            android:id="@+id/tv_pay_2"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_bill_item"
            android:layout_toRightOf="@id/tv_pay_1"
            android:layout_marginLeft="15dp"
            android:text="20元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:clickable="true"
            />
        
        <TextView 
            android:id="@+id/tv_pay_3"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_bill_item"
            android:layout_toRightOf="@id/tv_pay_2"
            android:layout_marginLeft="15dp"
            android:text="30元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:clickable="true"
            />
        
        <TextView 
            android:id="@+id/tv_pay_4"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_bill_item"
            android:layout_toRightOf="@id/tv_pay_3"
            android:layout_marginLeft="15dp"
            android:text="50元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:clickable="true"
            />
        
        <TextView 
            android:id="@+id/tv_pay_5"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_bill_item"
            android:layout_below="@id/tv_pay_1"
            android:layout_marginTop="12dp"
            android:text="100元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:clickable="true"
            />
        
        <TextView 
            android:id="@+id/tv_pay_6"
            android:layout_width="73dp"
            android:layout_height="37dp"
            android:background="@drawable/bg_bill_item"
            android:layout_toRightOf="@id/tv_pay_5"
            android:layout_marginLeft="15dp"
            android:layout_alignTop="@id/tv_pay_5"
            android:text="200元"
            android:textColor="#231815"
            android:gravity="center"
            android:textSize="12sp"
            android:clickable="true"
            />
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rl_pay_info"
        android:layout_width="fill_parent"
        android:layout_height="114dp"
        android:background="#ffffff"
        android:layout_below="@id/rl_pay_much"
        android:layout_marginTop="22dp"
        >
        
        <ImageView 
            android:id="@+id/view_flow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/pay_flow"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="28dp"
            />
        
        <TextView 
            android:id="@+id/tv_flow_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_flow_icon"
            android:layout_toRightOf="@id/view_flow_icon"
            android:layout_marginLeft="9dp"
            android:text="付款金额"
            />
        
        <TextView
            android:id="@+id/tv_flow"
            android:layout_width="151dp"
            android:layout_height="33dp"
            android:layout_below="@id/view_flow_icon"
            android:layout_alignLeft="@id/view_flow_icon"
            android:layout_toLeftOf="@+id/rl_attribution"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="18dp"
            android:text="5000流量币" 
            android:textColor="#231815"
            android:background="@drawable/bg_pay_flow_text"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />
        
        <RelativeLayout 
	        android:id="@+id/rl_attribution"
	        android:layout_width="151dp"
	        android:layout_height="wrap_content"
	        android:minHeight="76dp"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="15dp"
	        android:background="@drawable/bg_attribution"
	        >
	        
            <ImageView 
                android:id="@+id/iv_attribution_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/attribution"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                />
            
            <TextView 
	            android:id="@+id/tv_attribution_label"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignTop="@id/iv_attribution_icon"
	            android:layout_toRightOf="@id/iv_attribution_icon"
	            android:layout_marginLeft="9dp"
	            android:text="归属地"
	            />
            
            <TextView 
                android:id="@+id/tv_attribution"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_attribution_label"
                android:layout_marginTop="21dp"
                android:layout_centerHorizontal="true"
                android:text="归属地查询中…"
                android:textSize="18sp"
                />
        
    	</RelativeLayout>
        
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/tv_pay_btn"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_below="@id/rl_pay_info"
        android:layout_marginTop="22.5dp"
        android:layout_alignLeft="@id/rl_account_phone"
        android:layout_alignRight="@id/rl_account_phone"
        android:background="#DF201D"
        android:text="换购"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        />
    
    

</RelativeLayout>
