<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.etoc.weflowdemo.view.ExpandableLayout
            android:id="@+id/exv_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_user_info"
            expandable:el_contentLayout="@layout/expandableview_content"
            expandable:el_headerLayout="@layout/expandableview_header" />

        <LinearLayout
            android:id="@+id/ll_functions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/exv_user_info"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rl_make_flow"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_make_flow"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="#ededed" />

                <TextView
                    android:id="@+id/tv_make_flow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_make_flow"
                    android:includeFontPadding="false"
                    android:text="赚流量币"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_make_flow_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_make_flow_title"
                    android:layout_below="@id/tv_make_flow_title"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:text="看视频，下软件，玩游戏，轻松赚流量币"
                    android:textColor="#adadad"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#f6f7f7" />

            <RelativeLayout
                android:id="@+id/rl_use_flow"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_use_flow"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="#ededed" />

                <TextView
                    android:id="@+id/tv_use_flow_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_use_flow"
                    android:includeFontPadding="false"
                    android:text="花流量币"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_use_flow_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_use_flow_title"
                    android:layout_below="@id/tv_use_flow_title"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:text="充话费，定流量包，流量币大有用途"
                    android:textColor="#adadad"
                    android:textSize="12sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="8dp"
                android:background="#f6f7f7" />

            <RelativeLayout
                android:id="@+id/rl_discover"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <ImageView
                    android:id="@+id/iv_discover"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:background="#ededed" />

                <TextView
                    android:id="@+id/tv_discover_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/iv_discover"
                    android:includeFontPadding="false"
                    android:text="发现"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_discover_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_discover_title"
                    android:layout_below="@id/tv_discover_title"
                    android:layout_marginTop="8dp"
                    android:includeFontPadding="false"
                    android:text="刮刮卡，更多乐趣等你发现"
                    android:textColor="#adadad"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>